{
    "name": "Journalist's Toolbox",
    "description": "Adds keyboard shortcuts to open social networks in new tabs",
    // "icons": {"128": "icon_128.png"},
    "version": "0.1",
    "author": "Kia Farhang",
    "permissions": [
        "tabs",
        "*://*/*",
        "file://*"
    ],

    "commands": {
        "load_twitter":{
            "suggested_key": {
                "default": "Alt+T",
                "mac": "Alt+T"
            },
            "description": "Load Twitter in a new tab"
        },
        "load_facebook":{
            "suggested_key":{
                "default": "Alt+B",
                "mac": "Alt+T"
            },
            "description": "Load Facebook in a new tab"
        }  
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "manifest_version": 2
}
