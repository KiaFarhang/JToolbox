{
    "name": "Journalist's Toolbox",
    "description": "Adds keyboard shortcuts to open social networks in new tabs",
    // "icons": {"128": "icon_128.png"},
    "version": "0.1",
    "author": "Kia Farhang",
    "permissions": [
        "tabs",
        "*://*/*",
        "file://*"
    ],

    "commands": {
        "load_twitter":{
            "suggested_key": {
                "default": "Alt+T",
                "mac": "Alt+T"
            },
            "description": "Load Twitter in a new tab"
        },
        "load_facebook":{
            "suggested_key":{
                "default": "Alt+B",
                "mac": "Alt+T"
            },
            "description": "Load Facebook in a new tab"
        },
        "load_dictionary":{
            "suggested_key": {
                "default": "Alt+C",
                "mac": "Alt+C"
            },
            "description": "Load Dictionary in a new tab"
        },
        "load_gmail":{
            "suggested_key":{
                "default": "Alt+G",
                "mac": "Alt+G"
            },
            "description": "Load Gmail in a new tab"
        }
        // "load_jobs":{
        //     "suggested_key":{
        //         "default": "Alt+J",
        //         "mac": "Alt+J"
        //     },
        //     "description": "Load JournalismJobs in a new tab"
        // } 
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "manifest_version": 2
}
